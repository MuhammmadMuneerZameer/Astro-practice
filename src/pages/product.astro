---
import Navbar from '../components/Navbar.astro';
import ChatBot from '../components/ChatBot.jsx';
import '../styles/global.css';
import Footer from '../components/Footer.astro';
import Layout from '../layouts/Layout.astro';

const products = [
  { name: 'Product 1', description: 'Description for product 1.' },
  { name: 'Product 2', description: 'Description for product 2.' },
  { name: 'Product 3', description: 'Description for product 3.' },
];
---

<Layout>
  <Navbar />

<main class="max-w-4xl mx-auto py-10 px-4">
  <h1 class="text-3xl font-bold text-blue-900 mb-6">Our Products</h1>
  <div class="mb-6">
    <input
      type="text"
      placeholder="Search products... (static demo)"
      class="border rounded px-3 py-2 w-full"
      disabled
    />
    <p class="text-gray-500 mt-2">Live search and dynamic content will appear here.</p>
  </div>
  <div class="grid gap-4">
    {products.map(product => (
      <div class="bg-gray-200 rounded p-4 shadow">
        <h2 class="font-semibold text-lg mb-2">{product.name}</h2>
        <p class="text-gray-700">{product.description}</p>
      </div>
    ))}
    <slot />

  <Footer/>
</Layout>