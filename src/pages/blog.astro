---
import BlogCard from '../components/BlogCard.astro';
import Posts from '../data/blogPost.js';
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
---

<html lang="en">
  <head>
    <title>Our Blog</title>
  </head>
  <Layout>
    <body class="bg-[#0f0f0f] text-white font-sans">
    <section class="max-w-7xl mx-auto px-6 py-16">
      <h1 class="text-4xl md:text-5xl font-bold text-center mb-10">Our blog</h1>

      <div class="flex justify-center mb-6">
        <input
          type="text"
          placeholder="Start typing to search"
          class="w-full max-w-md px-4 py-2 rounded-full text-black"
        />
      </div>

      <div class="flex justify-center space-x-4 mb-12">
        <button class="bg-green-500 px-4 py-1 rounded-full text-black font-semibold">All</button>
        <button class="bg-[#1a1a1a] px-4 py-1 rounded-full">Development</button>
        <button class="bg-[#1a1a1a] px-4 py-1 rounded-full">Motion Design</button>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {Posts.map(post => (
          <BlogCard {...post} />
        ))}
      </div>
    </section>
  </body>
  </Layout>
</html>
