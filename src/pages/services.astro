---
import Navbar from '../components/Navbar.astro';
import ChatBot from '../components/ChatBot.jsx';
import '../styles/global.css';
import Footer from '../components/Footer.astro';
import Layout from '../layouts/Layout.astro';

const services = [
  { name: 'Web Development', description: 'Professional web development services.', link: '/services/web' },
  { name: 'App Development', description: 'Custom mobile and desktop app solutions.', link: '/services/app' },
  { name: 'SEO', description: 'Improve your site ranking with our SEO expertise.', link: '/services/seo' },
];
---
<Layout>
  
<Navbar />

<main class="max-w-4xl mx-auto py-10 px-4">
  <h1 class="text-3xl font-bold text-blue-900 mb-6">Our Services</h1>
  <div class="grid gap-6 md:grid-cols-3">
    {services.map(service => (
      <a href={service.link} class="block bg-gray-100 rounded-lg shadow hover:shadow-lg transition p-6 text-center hover:bg-blue-50">
        <h2 class="font-semibold text-xl text-blue-800 mb-2">{service.name}</h2>
        <p class="text-gray-700">{service.description}</p>
      </a>
    ))}
  </div>
</main>

<ChatBot client:visible />
<Footer/>
</Layout>