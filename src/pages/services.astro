---
import Navbar from '../components/Navbar';
import Splineanimation from '../components/Splineanimation';
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
title: "Our Services"
---
<Layout>
  

  <!-- Breadcrumb -->
  

  <!-- Heading -->
<div class="h-[50vh] items-center align-middle pt-[16vh] md:pt-[20vh] w-full backgroungd-image ba bg-cover bg-center bg-black " >
    <div class="absolute inset-0 z-0 h-[50vh] blur opacity-50">
    <Splineanimation client:only="react" />
  </div>  
  <h1 class="text-3xl md:text-6xl font-bold text-center mb-6 md:mb-8 text-[#b5ffdb]">Our Services</h1>

  <!-- Service Tags -->
  <div class=" relative flex flex-wrap justify-center gap-3 md:gap-4 mb-10 md:mb-12">
    {["UX/UI design", "Development", "Mobile app", "Branding", "Video editing", "Product design", "Motion design"].map(service => (
      <span class=" text-white px-4 py-2 rounded-full border border-white/20 bg-white/5 text-sm hover:bg-[#00f19f] hover:text-black transition cursor-pointer" >
        {service}
      </span>
    ))}
  </div>
</div>
<section class="min-h-screen bg-black text-white px-4 md:px-16 py-12 md:py-20">

  <!-- Service Block -->
  <div class="grid md:grid-cols-2 gap-8 md:gap-10 items-center max-w-6xl mx-auto">
    <!-- Text -->
    <div>
      <h2 class="text-2xl md:text-4xl font-bold text-[#b5ffdb] mb-4">UX/UI design</h2>
      <p class="text-gray-300 mb-6 text-base md:text-lg">
        We create visually stunning, user-friendly designs that enhance engagement and deliver a smooth digital experience
      </p>
      <ul class="space-y-2 text-sm text-white">
        <li class="flex items-center gap-2"><span class="text-green-400">●</span> User research & personas</li>
        <li class="flex items-center gap-2"><span class="text-green-400">●</span> Competitors analysis</li>
        <li class="flex items-center gap-2"><span class="text-green-400">●</span> Wireframes & prototypes</li>
      </ul>
    </div>

    <!-- Image -->
    <div>
      <img src="/images/laptop.jpg" alt="UX Design Laptop" class="rounded-xl w-full object-cover shadow-lg" loading="lazy" sizes="(max-width: 768px) 100vw, 50vw" />
    </div>
    <div>
      <h2 class="text-2xl md:text-4xl font-bold text-[#b5ffdb] mb-4">UX/UI design</h2>
      <p class="text-gray-300 mb-6 text-base md:text-lg">
        We create visually stunning, user-friendly designs that enhance engagement and deliver a smooth digital experience
      </p>
      <ul class="space-y-2 text-sm text-white">
        <li class="flex items-center gap-2"><span class="text-green-400">●</span> User research & personas</li>
        <li class="flex items-center gap-2"><span class="text-green-400">●</span> Competitors analysis</li>
        <li class="flex items-center gap-2"><span class="text-green-400">●</span> Wireframes & prototypes</li>
      </ul>
    </div>

    <!-- Image -->
    <div>
      <img src="/images/laptop.jpg" alt="UX Design Laptop" class="rounded-xl w-full object-cover shadow-lg" loading="lazy" sizes="(max-width: 768px) 100vw, 50vw" />
    </div>
  </div>
</section>
</Layout>
