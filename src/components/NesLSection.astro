<section class="py-12 px-4" style="background: var(--color-bg);">
  <div class="max-w-xl mx-auto rounded-lg shadow-lg p-8 text-center" style="background: var(--color-card);">
    <h2 class="text-2xl md:text-3xl font-bold mb-4" style="color: var(--color-primary);">
      Subscribe to our Newsletter
    </h2>
    <p class="mb-6 text-lg" style="color: var(--color-text);">
      Get the latest updates, news, and exclusive offers straight to your inbox.
    </p>
    <form class="flex flex-col md:flex-row gap-4 justify-center">
      <input
        type="email"
        required
        placeholder="Enter your email"
        class="flex-1 px-4 py-2 rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[var(--color-accent)] transition"
        style="background: var(--color-bg); color: var(--color-text);"
      />
      <button
        type="submit"
        class="px-6 py-2 rounded font-semibold transition"
        style="background: var(--color-accent); color: var(--color-primary);"
        onmouseover="this.style.background= 'var(--color-accent-hover)'"
        onmouseout="this.style.background= 'var(--color-accent)'"
      >
        Subscribe
      </button>
    </form>
  </div>
</section>