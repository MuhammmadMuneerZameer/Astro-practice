---
import ServiceCard from '../components/ServiceCard.astro';

const services = [
  {
    title: "Product Design",
    description: "Understanding user behavior to create intuitive, effective experiences.",
    image: "/images/product-design.jpg",
    link: "#",
    class: "col-span-2 row-span-1"
  },
  { title: "UX/UI Design", description: "Understanding user behavior to create intuitive, effective experiences.", link: "#", class: "col-span-1 row-span-1" ,image: "/images/product-design.jpg",},
  { title: "Mobile Applications", description: "Understanding user behavior to create intuitive, effective experiences.", link: "#", class: "col-span-1 row-span-1",image: "/images/product-design.jpg", },
  { title: "Development", description: "Understanding user behavior to create intuitive, effective experiences.", link: "#", class: "col-span-1 row-span-1", image: "/images/product-design.jpg", },
  { title: "Video Editing", description: "Understanding user behavior to create intuitive, effective experiences.", link: "#", class: "col-span-1 row-span-1", image: "/images/product-design.jpg", },
  { title: "Branding", description: "Understanding user behavior to create intuitive, effective experiences.", link: "#", class: "col-span-1 row-span-1", image: "/images/product-design.jpg", },
  { title: "Motion Design", description: "Understanding user behavior to create intuitive, effective experiences.", link: "#", class: "col-span-2 row-span-1", image: "/images/product-design.jpg", },
];
---

<section class="bg-black py-24 px-6 text-white">
  <div class="max-w-5xl mx-auto">
    <div class="flex justify-between items-center mb-10">
      <h2 class="text-3xl md:text-4xl font-bold text-green-300">Our Services</h2>
      <a
  href="/services"
  class="hero-button group relative inline-flex items-center justify-center px-6 py-3 text-white font-medium rounded-full  bg-black/80 backdrop-blur-sm shadow-md transition-all duration-300 overflow-hidden"
>
  <span class="relative z-10 flex items-center gap-2">
    Learn more
    <svg
      class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1 group-hover:-translate-y-0"
      fill="none"
      stroke="currentColor"
      stroke-width={2}
      viewBox="0 0 24 24"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14M12 5l7 7-7 7" />
    </svg>
  </span>
  <span
    class="absolute inset-0 rounded-full bg-green-500 opacity-0 "
  ></span>
  <span
    class="absolute inset-0 rounded-full border border-green-400 opacity-0 group-hover:opacity-100 transition-all duration-500"
  ></span>
</a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3  gap-0">
      {services.map(service => (
        <div class={service.class}>
          <ServiceCard {...service} />
        </div>
      ))}
    </div>
  </div>
</section>
<style>
  .hero-button{
    box-shadow: 0 2px 15px rgb(99, 253, 189);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
</style> 