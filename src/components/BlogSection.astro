---
import BlogCard from '../components/BlogCard.astro';
import { getPosts } from '../data/blogPost.js';

const posts = await getPosts();
---

<section class="bg-black py-20 px-6 text-white">
  <div class="max-w-5xl mx-auto">
    <div class="flex justify-between items-center mb-10">
      <h2 class="text-3xl md:text-4xl font-bold text-green-300">
        From our <span class="text-white">lab</span>
      </h2>
      <a href="/blog" class="bg-transparent border border-green-500 text-green-300 px-4 py-1 rounded-full text-sm hover:bg-green-500 hover:text-black transition">
        View all posts â†—
      </a>
    </div>

    <div class="grid gap-6 md:grid-cols-3">
     {posts.map((post) => (
  <a href={`/blog/${post.slug}`} class="hover:opacity-80 transition duration-200">
    <BlogCard {...post} />
  </a>
))}


    </div>
  </div>
</section>