---
const { title, description, image, link } = Astro.props;
import "../styles/global.css";
---

<a href={link} class={`relative group bg-black border border-gray-800  overflow-hidden flex items-end ${image ? 'p-4' : 'p-6'} min-h-[200px]`}>
  {image && (
    <img
      src={image}
      alt={title}
      class="absolute inset-0 w-full h-full object-cover opacity-0 group-hover:scale-105 hover:opacity-60 ease-in-out transition-transform "
    />
  )}
  <div class="relative z-10 text-left">
    <h3 class="text-xl font-semibold text-white">
      <span style="color:var(--color-accent)">{title.split(' ')[0]}</span> {title.split(' ').slice(1).join(' ')}
    </h3>
    {description && <p class="text-sm text-gray-400 mt-1 ">{description}</p>}
  </div>
</a>
